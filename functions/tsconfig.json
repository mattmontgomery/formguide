{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "outDir": "build",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["../types"],
    "rootDir": "..",
    "paths": {
      "@/constants": ["../constants.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "test/**/*.ts", "../types/results.d.ts"]
}
